<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_view_offers_item_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/fragment_view_offers_item_userImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:contentDescription="@string/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <ImageButton
        android:id="@+id/fragment_view_offers_accept"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="@null"
        android:contentDescription="@string/onlineIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_done_black_24" />

    <TextView
        android:id="@+id/fragment_view_offers_item_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="5"
        android:gravity="start|center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/fragment_view_offers_accept"
        app:layout_constraintStart_toEndOf="@+id/fragment_view_offers_item_userImage"
        app:layout_constraintTop_toTopOf="@+id/fragment_view_offers_item_userImage" />

    <TextView
        android:id="@+id/fragment_view_offers_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Distance"
        app:layout_constraintEnd_toEndOf="@+id/fragment_view_offers_item_userName"
        app:layout_constraintStart_toStartOf="@+id/fragment_view_offers_item_userName"
        app:layout_constraintTop_toBottomOf="@+id/fragment_view_offers_item_userName" />

</androidx.constraintlayout.widget.ConstraintLayout>