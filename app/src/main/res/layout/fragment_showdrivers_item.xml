<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_showdrivers_item_constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/fragment_showdrivers_item_userImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:contentDescription="@string/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <ImageView
        android:id="@+id/fragment_showdrivers_item_isOnlineButton"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:contentDescription="@string/onlineIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/presence_online" />

    <TextView
        android:id="@+id/fragment_showdrivers_item_userName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="5"
        android:gravity="start|center_vertical"
        app:layout_constraintEnd_toStartOf="@+id/fragment_showdrivers_item_isOnlineButton"
        app:layout_constraintStart_toEndOf="@+id/fragment_showdrivers_item_userImage"
        app:layout_constraintTop_toTopOf="@+id/fragment_showdrivers_item_userImage" />

</androidx.constraintlayout.widget.ConstraintLayout>